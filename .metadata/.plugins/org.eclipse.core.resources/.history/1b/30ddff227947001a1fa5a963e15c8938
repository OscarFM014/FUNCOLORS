

import java.awt.*;
import javax.swing.*;


public class MyVentana extends JFrame{
	JFrame ventana;
	JPanel menu;
	private JButton btnJuegoNuevo,
	btnOpciones,
	btnComojugar,
	btnScores;
	
	public void crearVentana(){
		ventana = new JFrame("Fun Colors");
		ventana.setDefaultCloseOperation(EXIT_ON_CLOSE);	
		ventana.add(panelMenu,BorderLayout.SOUTH); 
		ventana.pack();
		setLocationRelativeTo(null);
		ventana.setResizable(false);
		ventana.setVisible(true);
	}
	
	public void crearMenu(){
		menu.setPreferredSize(new Dimension(1000,800));
		menu.setBackground(Color.WHITE);
		menu.setLayout(null);
		

		menu.btnJuegoNuevo=new JButton("Juego Nuevo");
		menu.btnJuegoNuevo.setBounds(350,420,300,60);
		menu.btnJuegoNuevo.setBackground(Color.RED);
		menu.btnJuegoNuevo.setHorizontalAlignment(SwingConstants.CENTER);
		menu.btnJuegoNuevo.setFont(new Font("arial", Font.PLAIN, 30));
		menu.btnJuegoNuevo.addActionListener(menu);

		menu.btnOpciones =new JButton("Opciones");
		menu.btnOpciones.setBounds(350,500,300,60);
		menu.btnOpciones.setBackground(Color.MAGENTA);
		menu.btnOpciones.setHorizontalAlignment(SwingConstants.CENTER);
		menu.btnOpciones.setFont(new Font("arial", Font.PLAIN, 30));
		menu.btnOpciones.addActionListener(menu);

		menu.btnComojugar=new JButton("Como Jugar");
		menu.btnComojugar.setBounds(350,580,300,60);
		menu.btnComojugar.setBackground(new Color(255, 13, 154));
		this.btnComojugar.setHorizontalAlignment(SwingConstants.CENTER);
		this.btnComojugar.setFont(new Font("arial", Font.PLAIN, 30));
		this.btnComojugar.addActionListener(this);

		this.btnScores=new JButton("Mejores Puntuaciones");
		this.btnScores.setBounds(350,660,300,60);
		this.btnScores.setBackground(new Color(255, 13, 154));
		this.btnScores.setHorizontalAlignment(SwingConstants.CENTER);
		this.btnScores.setFont(new Font("arial", Font.PLAIN, 30));
		this.btnScores.addActionListener(this);

		menu.add(this.btnJuegoNuevo);
		this.add(this.btnOpciones);
		this.add(this.btnComojugar);
		this.add(this.btnScores);
	}
	

	public static void main(String[] args) {
		MyVentana v = new MyVentana();
		v.crearVentana();
	}
}

